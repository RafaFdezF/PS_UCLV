# Compilar archivos objeto
gcc -c crear.c -o crear.o
gcc -c inicializar.c -o inicializar.o
gcc -c operaciones.c -o operaciones.o -lm
gcc -c mostrar.c -o mostrar.o




# Crear la biblioteca est치tica
ar rcs libvector.a crear.o inicializar.o operaciones.o mostrar.o

# Compilar el programa principal con la biblioteca est치tica
gcc -o programa_estatico main.c libvector.a -lm




# Crear la biblioteca din치mica
gcc -shared -o libvector.so crear.c inicializar.c operaciones.c mostrar.c -lm

# Compilar el programa principal con la biblioteca din치mica
gcc -o programa_dinamico main.c -L. -lvector -lm

# Para ejecutar (configurar la ruta de bibliotecas)
export LD_LIBRARY_PATH=.:$LD_LIBRARY_PATH
./programa_dinamico